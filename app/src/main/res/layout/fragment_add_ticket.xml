<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.ticket.AddTicketFragment">

    <TableLayout
        android:id="@+id/addTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ticketNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powód"
                android:textColor="#333333"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ticketNameEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Wyprzedzanie"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/penaltyPointsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Punkty"
                android:textColor="#333333"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/penaltyPointsEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="5"
                android:inputType="number" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ticketDurationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ważność"
                android:textColor="#333333"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/ticketDurationSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ticketDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data"
                android:textColor="#333333"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ticketDateEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:hint="dd/mm/rrrr" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ticketAmountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kwota"
                android:textColor="#333333"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ticketAmountEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="1500 zł"
                android:inputType="number" />
        </TableRow>

        <Button
            android:id="@+id/saveTicketButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#3498db"
            android:text="Zapisz mandat"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </TableLayout>

</LinearLayout>
